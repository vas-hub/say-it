{
  "compilerOptions": {
    "types": ["node"],
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "commonjs",
    "target": "ES2017",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "incremental": true,
    "allowJs": false
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "./.eslintrc.js", "./src/tests/**/*"]
}
